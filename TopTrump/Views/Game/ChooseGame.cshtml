@model TopTrump.Models.ChooseGameViewModel

<h1>Choose Your Game Settings</h1>

<form asp-action="StartGame">
    <div class="form-group">
        <label for="selectedDeckId">Select a Deck:</label>
        <select asp-for="SelectedDeckId" class="form-control">
            @foreach (var deck in Model.AvailableDecks)
            {
                <option value="@deck.DeckId">@deck.DeckName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="selectedDifficulty">Select Difficulty:</label>
        <select asp-for="SelectedDifficulty" class="form-control">
            @foreach (var difficulty in Model.DifficultyOptions)
            {
                <option value="@difficulty">@difficulty</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Start Game</button>
</form>
