@model IEnumerable<TopTrump.Models.Card>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stat1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stat2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stat3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stat4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stat1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stat2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stat3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stat4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
